{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "off",
    // "@typescript-eslint/semi": "never",
    "curly": "off",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": [
      "warn",
      "never"
    ],
    "comma-dangle": [
      "warn",
      "never"
    ]
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts"
  ]
}